    <p
      class='mt-3 text-base text-gray-500 sm:mt-5 sm:text-lg sm:max-w-xl sm:mx-auto md:mt-5 md:text-xl lg:mx-0 {{#if isToLeft}}xl:text-right{{/if}}'
